server {
    listen 80;
    server_name api.cabwds.asia;

    # Redirect HTTP to HTTPS
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name api.cabwds.asia;

    # SSL Certificates (Make sure paths match your copied certs)
    ssl_certificate /etc/ssl/certs/common/api_cert.pem;
    ssl_certificate_key /etc/ssl/private/common/api_privkey.pem;

    # Recommended security settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Enable HSTS (optional, improves security but makes HTTP fallback difficult)
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

    location / {
        proxy_pass http://172.31.23.140:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
